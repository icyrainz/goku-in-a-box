{
  "$schema": "https://opencode.ai/config.json",
  "model": "{env:OPENCODE_MODEL}",
  "provider": {
    "default": {
      "name": "LLM Provider",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "apiKey": "{env:LLM_API_KEY}",
        "baseURL": "{env:LLM_BASE_URL}"
      },
      "models": {
        "default": {
          "name": "Default Model",
          "tool_call": true,
          "limit": {
            "context": 200000,
            "output": 65536
          }
        }
      }
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "read": "allow",
    "write": "allow"
  },
  "share": "disabled",
  "disabled_providers": ["opencode"]
}
