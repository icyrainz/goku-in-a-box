# Shared
LLM_API_KEY=your-api-key-here
LLM_HOST=https://api.openai.com

# OpenCode agent
OPENCODE_LLM_HOST=https://api.openai.com/v1
OPENCODE_MODEL=openai/gpt-4o

# Goose agent (no /v1 â€” Goose appends it automatically)
GOOSE_LLM_HOST=https://api.openai.com
